@model HolidayManagment.Models.Leave

<h2>Delete Leave</h2>

<div>
    <h3>Are you sure you want to delete the leave record for <strong>@Model.Employee.FullName</strong>?</h3>

    <p>Leave Type: @Model.LeaveType.Name</p>
    <p>Date From: @Model.DateFrom.ToString("yyyy-MM-dd")</p>
    <p>Date To: @Model.DateTo.ToString("yyyy-MM-dd")</p>
    <p>Approved: @Model.IsApproved ? "Yes" : "No"</p>
    <p>Annual Leave Days: @Model.LeaveDays</p>
</div>

<form method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
