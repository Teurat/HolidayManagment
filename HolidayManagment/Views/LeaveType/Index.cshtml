@model List<HolidayManagment.Models.LeaveType>

<h2>Leave Types</h2>
<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Create New LeaveType</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var leaveType in Model)
        {
            <tr>
                <td>@leaveType.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@leaveType.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@leaveType.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
