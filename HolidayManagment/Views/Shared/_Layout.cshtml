@using Microsoft.AspNetCore.Identity
@using HolidayManagment.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HolidayManagment</title>
    <link href="https://kendo.cdn.telerik.com/2024.2.903/styles/kendo.default.min.css" rel="stylesheet" />
    <script src="https://kendo.cdn.telerik.com/2024.2.903/js/jquery.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2024.2.903/js/kendo.all.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HolidayManagment.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
            <div class="container">
                <a class="navbar-brand" href="@Url.Action("Index", "Home")">Leave Management</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ml-auto">

                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Company")">Companies</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Employee")"> Employees</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "LeaveType")">LeaveTypes</a></li>
                        <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Leave")">Leaves</a></li>
                        <li>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-action="Logout" asp-controller="Account" method="post" style="display:inline;">
                                    @Html.AntiForgeryToken()  
                                    <button type="submit" class="btn btn-danger">Logout</button>
                                </form>
                            }
                            else
                            {
                                <a href="@Url.Action("Login", "Account")" class="btn btn-primary">Login</a>
                                <span> | </span>
                                <a href="@Url.Action("Register", "Account")" class="btn btn-secondary">Register</a>
                            }
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container">
            @if (User.Identity.IsAuthenticated)
            {
                <p>Welcome, @User.Identity.Name</p> 
            }
            else
            {
                <p>Welcome, Guest</p>
            }

            @RenderBody() 
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
